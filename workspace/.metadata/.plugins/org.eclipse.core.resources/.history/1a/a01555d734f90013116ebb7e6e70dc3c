import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.PrintStream;
import java.math.BigInteger;
import java.util.Scanner;

/*
ID : weng_xo2
PROG : buylow
LANG : JAVA
*/
public class buylow {
	Scanner input = new Scanner(System.in);
	
	int N, a[], f[], ans1;
	BigInteger cnt[], ans2 = BigInteger.valueOf(0);
	
	void run() {
		N = input.nextInt();
		a = new int[N + 1];
		f = new int[N + 1];
		cnt = new BigInteger[N + 1];
		for(int i = 1; i <= N; ++i) {
			a[i] = input.nextInt();
		}
		for(int i = 1; i <= N; ++i) {
			f[i] = 1;
			for(int j = 1; j < i; ++j) if(a[j] > a[i] && f[j] + 1 > f[i]){
				f[i] = f[j] + 1;
			}
//			System.out.println(i + " " + f[i]);
		}
		for(int i = 1; i <= N; ++i) {
			if(f[i] == 1) {
				cnt[i] = BigInteger.valueOf(1);
			}
			else {
				cnt[i] = BigInteger.valueOf(0);
			}
			for(int j = 1; j < i; ++j) if(a[j] > a[i] && f[j] + 1 == f[i]){
				cnt[i] = cnt[i].add(cnt[j]);
			}
		}
		for(int i = 1; i <= N; ++i) {
			if(f[i] > ans1) {
				ans1 = f[i];
			}
		}
		for(int i = 1; i <= N; ++i) {
			if(f[i] == ans1) {
				ans2 = ans2.add(cnt[i]);
			}
		}
		System.out.println(ans1 + " " + ans2);
	}
	
	public static void main(String args[]) throws FileNotFoundException {
		System.setIn(new FileInputStream("buylow.in"));
		System.setOut(new PrintStream("buylow.out"));
		new buylow().run();
	}
}
